@model WebApplication10.ViewModels.AdminProductsFormVM

<h4>Cập nhật sản phẩm</h4>
<!--demooo -->
<form class="ajax-form product-edit-form"
      method="post"
      action="@Url.Action("Edit","Products")">

    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.ProductId)

    <div class="mb-3">
        <label>Tên sản phẩm</label>
        @Html.TextBoxFor(m => m.ProductName, new { @class = "form-control" })
    </div>

    <div class="mb-3">
        <label>Danh mục</label>
        @Html.DropDownListFor(
            m => m.CategoryId,
            new SelectList(ViewBag.Categories, "CategoryId", "CategoryName", Model.CategoryId),
            "-- Chọn danh mục --",
            new { @class = "form-select" }
        )
    </div>

    <div class="mb-3">
        <label>Thương hiệu</label>
        @Html.DropDownListFor(
            m => m.BrandId,
            new SelectList(ViewBag.Brands, "BrandId", "BrandName", Model.BrandId),
            "-- Chọn thương hiệu --",
            new { @class = "form-select" }
        )
    </div>

    <div class="row mb-3">
        <div class="col">
            <label>Giá</label>
            @Html.TextBoxFor(m => m.Price, new { @class = "form-control" })
        </div>
        <div class="col">
            <label>Số lượng</label>
            @Html.TextBoxFor(m => m.Quantity, new { @class = "form-control" })
        </div>
    </div>

    <div class="mb-3">
        <label>Mô tả</label>
        @Html.TextAreaFor(
            m => m.Description,
            new { @class = "form-control ckeditor", rows = 5 }
        )
    </div>

    <div class="mb-3">
        <label>Trạng thái</label>
        @Html.DropDownListFor(
            m => m.Status,
            new SelectList(new[] { "Available", "Inactive" }, Model.Status),
            new { @class = "form-select" }
        )
    </div>

    <button type="submit" class="btn btn-primary">Cập nhật</button>
    <button type="button"
            class="btn btn-secondary btn-back-product">
        Quay lại
    </button>
</form>
