@model WebApplication10.Models.Products

<h4>Xác nhận xóa sản phẩm</h4>

<p>
    Bạn có chắc chắn muốn xóa sản phẩm
    <strong>@Model.ProductName</strong> không?
</p>

<form method="post"
      action="/AdminProducts/Delete"
      class="ajax-form delete-confirm-form">

    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.ProductId)

    <div class="mt-3">
        <button type="submit" class="btn btn-danger">
            <i class="fa-solid fa-trash"></i> Xóa
        </button>

        <button type="button"
                id="btnBackToList"
                class="btn btn-secondary">
            Hủy
        </button>
    </div>
</form>

<script>
    $('#btnBackToList').click(function () {
        loadMain('/AdminProducts/ProductListPartial');
    });
</script>