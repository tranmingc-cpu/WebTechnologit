@{
    ViewBag.Title = "Products";
    Layout = null;
}

<div class="users-page">
    <div class="users-header">
        <div class="users-title">
            <h3>Sản phẩm</h3>
            <span class="users-subtitle">Quản lý danh sách sản phẩm</span>
        </div>

        <div class="users-actions">
            <a href="/AdminProducts/Create"
               class="btn btn-primary"
               data-admin-partial="true">
                Thêm sản phẩm
            </a>
        </div>
    </div>

    <div id="users-partial-container">
    </div>
</div>

<script>
    console.log('AdminProducts Index loaded');

    $(function () {
        loadProductList();
    });

    function loadProductList() {
        console.log('➡️ load ProductListPartial');

        $.get('/AdminProducts/ProductListPartial')
            .done(function (html) {
                $('#users-partial-container').html(html);
            })
            .fail(function (xhr) {
                console.error('❌ Load ProductListPartial fail', xhr.status);
            });
    }
</script>