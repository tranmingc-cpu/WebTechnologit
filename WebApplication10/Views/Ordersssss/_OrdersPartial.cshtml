@model IEnumerable<WebApplication10.Models.Orders>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Date</th>
            <th>Status</th>
            <th>Total</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var o in Model)
        {
            <tr>
                <td>@o.OrderId</td>
                <td>@(o.OrderDate?.ToString("dd/MM/yyyy"))</td>
                <td>
                    <span class="badge
                    @(o.Status == "Completed" ? "bg-success" :
                      o.Status == "Paid" ? "bg-info" : "bg-warning")">
                        @o.Status
                    </span>
                </td>
                <td>@(o.TotalAmount?.ToString("N0"))</td>
                <td>
                    <button class="btn btn-sm btn-primary"
                            onclick="loadOrderDetails(@o.OrderId)">
                        View
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>
