@model WebApplication10.ViewModels.ContactPageViewModel

<div class="info-page">

    <div class="section-header">
        <h2>@(Model.PageContent?.Title ?? "Liên hệ với chúng tôi")</h2>
    </div>

    <div class="info-content">
        @Html.Raw(Model.PageContent?.Content)
    </div>

    <div class="contact-form info-content" style="margin-top:2rem;">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">
                @TempData["Success"]
            </div>
        }

        @using (Html.BeginForm("Contact", "Pages", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.LabelFor(m => m.ContactForm.FullName)
                @Html.TextBoxFor(m => m.ContactForm.FullName, new { @class = "form-control", placeholder = "Họ và tên" })
                @Html.ValidationMessageFor(m => m.ContactForm.FullName, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.ContactForm.Email)
                @Html.TextBoxFor(m => m.ContactForm.Email, new { @class = "form-control", placeholder = "Email" })
                @Html.ValidationMessageFor(m => m.ContactForm.Email, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.ContactForm.Phone)
                @Html.TextBoxFor(m => m.ContactForm.Phone, new { @class = "form-control", placeholder = "Số điện thoại" })
                @Html.ValidationMessageFor(m => m.ContactForm.Phone, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.ContactForm.Message)
                @Html.TextAreaFor(m => m.ContactForm.Message, new { @class = "form-control", rows = 6, placeholder = "Nội dung liên hệ" })
                @Html.ValidationMessageFor(m => m.ContactForm.Message, "", new { @class = "text-danger" })
            </div>

            <div class="form-group text-right">
                <button type="submit" class="btn btn-primary btn-lg">Gửi liên hệ</button>
            </div>
        }
    </div>
</div>
