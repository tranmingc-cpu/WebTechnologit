@model WebApplication10.Models.InfoPages
@{
    Layout = null;
}
<div id="partial-content" class="edit-page-container">

    <h2 class="page-title mb-4">Edit @Model.Title</h2>

    @using (Html.BeginForm("Edit", "Pages", FormMethod.Post, new { @id = "editPageForm", @class = "ajax-form" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.InfoPageId)

        <div class="form-group mb-4">
            @Html.LabelFor(m => m.Title, htmlAttributes: new { @class = "form-label required" })
            @Html.TextBoxFor(m => m.Title, new { @class = "form-control theme-input" })
        </div>

        <div class="form-group mb-4">
            @Html.LabelFor(m => m.Content, htmlAttributes: new { @class = "form-label required" })
            @Html.TextAreaFor(m => m.Content, new { @class = "form-control ckeditor theme-input", id = "Content" })
        </div>

        <button type="submit" class="btn btn-primary theme-btn">Save</button>
    }
</div>