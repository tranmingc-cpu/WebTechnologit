<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - GearVN</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- BOOTSTRAP -->
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />

    <!-- SITE CSS -->
    <link href="~/Content/css/site.css?@DateTime.Now.Ticks" rel="stylesheet" />

    <!-- FONT AWESOME -->
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
</head>
<body>

    <!-- HEADER -->
    <header class="header">
        <div class="container header-top">
            <div class="logo">
                <span class="logo-red">GEAR</span><span class="logo-white">VN</span>
            </div>

            <div class="search-box">
                <input type="text" placeholder="Bạn cần tìm gì?" />
                <button><i class="fa fa-search"></i></button>
            </div>

            <div class="header-actions">
                <a href="#"><i class="fa fa-user"></i> Tài khoản</a>
                <a href="#"><i class="fa fa-cart-shopping"></i> Giỏ hàng</a>
            </div>
        </div>

        <!-- MENU -->
        <nav class="menu">
            <a href="#">Laptop Gaming</a>
            <a href="#">PC Gaming</a>
            <a href="#">PC Văn Phòng</a>
            <a href="#">Màn hình</a>
            <a href="#">Bàn phím</a>
            <a href="#">Chuột</a>
        </nav>
    </header>

    <!-- BODY -->
    <main class="container">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="footer">
        <div class="container footer-content">
            <!-- LEFT -->
            <div class="footer-left">
                <strong>GEAR<span style="color:#ff5c5c;">VN</span></strong><br />
                Hệ thống bán lẻ thiết bị công nghệ<br />
                123 Nguyễn Văn Linh, TP.HCM<br />
                Hotline: <a href="tel:19005301">1900 5301</a><br />
                Email: <a href="mailto:support@gearvn.com">support@gearvn.com</a>
            </div>

            <!-- CENTER -->
            <div class="footer-center">
                <a href="#">Giới thiệu</a> |
                <a href="#">Liên hệ</a> |
                <a href="#">Bảo hành</a> |
                <a href="#">Đổi trả</a> |
                <a href="#">Hướng dẫn mua</a> |
                <a href="#">Điều khoản</a>
            </div>

            <!-- RIGHT -->
            <div class="footer-right">
                <div>© 2025 GearVN Clone</div>
                <div class="social-icons">
                    <a href="#"><i class="fab fa-facebook-f"></i></a>
                    <a href="#"><i class="fab fa-youtube"></i></a>
                    <a href="#"><i class="fab fa-instagram"></i></a>
                </div>
            </div>
        </div>
    </footer>
</body>
</html>
