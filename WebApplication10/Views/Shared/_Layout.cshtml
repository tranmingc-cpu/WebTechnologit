<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - GearVN</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- BOOTSTRAP -->
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />

    <!-- SITE CSS -->
    <link href="~/Content/css/site.css" rel="stylesheet" />

    <!-- FONT AWESOME -->
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
</head>
<body>

    <!-- HEADER -->
    <header class="header">
        <div class="container header-top">
            <div class="logo">
                <span class="logo-red">GEAR</span><span class="logo-white">VN</span>
            </div>

            <div class="search-box">
                <input type="text" placeholder="Bạn cần tìm gì?" />
                <button><i class="fa fa-search"></i></button>
            </div>

            <div class="header-actions">
                <a href="#"><i class="fa fa-user"></i> Tài khoản</a>
                <a href="#"><i class="fa fa-cart-shopping"></i> Giỏ hàng</a>
            </div>
        </div>

        <!-- MENU -->
        <nav class="menu">
            <a href="#">Laptop Gaming</a>
            <a href="#">PC Gaming</a>
            <a href="#">PC Văn Phòng</a>
            <a href="#">Màn hình</a>
            <a href="#">Bàn phím</a>
            <a href="#">Chuột</a>
        </nav>
    </header>

    <!-- BODY -->
    <main class="container">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="footer">
        <p>© 2025 GearVN Clone - ASP.NET MVC 5</p>
    </footer>

</body>
</html>
