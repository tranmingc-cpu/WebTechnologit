<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>@ViewBag.Title - TECHSTORE</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- BOOTSTRAP -->
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />

    <!-- SITE CSS -->
    <link href="~/Content/css/site.css?@DateTime.Now.Ticks" rel="stylesheet" />

    <!-- FONT AWESOME -->
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    
    @RenderSection("Styles", required: false)
</head>
<body>

    <!-- HEADER -->
    <header class="header">
        <div class="container header-top">
            <div class="logo">
                <a href="@Url.Action("Index", "Home")">
                    <span class="logo-red">TECH</span><span class="logo-white">STORE</span>
                </a>
            </div>

            <div class="search-box">
                @using (Html.BeginForm("Index", "Products", FormMethod.Get))
                {
                    <input type="text"
                           name="keyword"
                           value="@Request.QueryString["keyword"]"
                           placeholder="Tìm theo tên, hãng, loại..." />

                    <button type="submit">
                        <i class="fa fa-search"></i>
                    </button>
                }
            </div>

            <div class="header-actions">
                <a href="#"><i class="fa fa-user"></i> Tài khoản</a>
                <a href="@Url.Action("Index", "Cart")" class="cart-link">
                    <i class="fa fa-cart-shopping"></i> Giỏ hàng
                    @if (ViewBag.CartCount > 0)
                    {
                        <span class="cart-badge">@ViewBag.CartCount</span>
                    }
                </a>
            </div>
        </div>

        <!-- MENU -->
        <nav class="menu">
            @foreach (var c in ViewBag.Categories as List<WebApplication10.Models.Categories>)
            {
                <a href="@Url.Action("Index", "Products", new { categoryId = c.CategoryId })"
                   class="@(ViewBag.CurrentCategoryId == c.CategoryId ? "active" : "")">
                    @c.CategoryName
                </a>
            }
        </nav>
    </header>

    <!-- BODY -->
    <main class="container page-content">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="footer">
        <div class="container footer-content">
            <!-- LEFT -->
            <div class="footer-left">
                <strong>TECH<span style="color:#ff5c5c;">STORE</span></strong><br />
                Hệ thống bán lẻ thiết bị công nghệ<br />
                123 Nguyễn Văn Linh, TP.HCM<br />
                Hotline: <a href="tel:19005301">1900 5301</a><br />
                Email: <a href="mailto:support@techstore.com">support@techstore.com</a>
            </div>

            <!-- CENTER -->
            <div class="footer-center">
                <a href="#">Giới thiệu</a> |
                <a href="#">Liên hệ</a> |
                <a href="#">Bảo hành</a> |
                <a href="#">Đổi trả</a> |
                <a href="#">Hướng dẫn mua</a> |
                <a href="#">Điều khoản</a>
            </div>

            <!-- RIGHT -->
            <div class="footer-right">
                <div>© 2025 TechStore</div>
                <div class="social-icons">
                    <a href="#"><i class="fab fa-facebook-f"></i></a>
                    <a href="#"><i class="fab fa-youtube"></i></a>
                    <a href="#"><i class="fab fa-instagram"></i></a>
                </div>
            </div>
        </div>
    </footer>

    <!-- JQUERY -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    
    <script>
        // Global function to handle add to cart
        $(document).ready(function () {
            $(document).on('click', '.btn-add-to-cart', function () {
                var btn = $(this);
                var productId = btn.data('product-id');
                
                btn.prop('disabled', true).text('Đang thêm...');
                
                $.ajax({
                    url: '@Url.Action("AddToCart", "Cart")',
                    type: 'POST',
                    data: { productId: productId, quantity: 1 },
                    success: function (response) {
                        if (response.success) {
                            btn.text('✓ Đã thêm');
                            
                            // Update cart badge
                            var badge = $('.cart-badge');
                            if (badge.length) {
                                badge.text(response.cartCount).show();
                            } else {
                                $('.cart-link').append('<span class="cart-badge">' + response.cartCount + '</span>');
                            }
                            
                            // Show notification
                            showNotification(response.message, 'success');
                            
                            setTimeout(function () {
                                btn.prop('disabled', false).html('🛒 Thêm vào giỏ');
                            }, 2000);
                        } else {
                            btn.prop('disabled', false).html('🛒 Thêm vào giỏ');
                            showNotification(response.message, 'error');
                        }
                    },
                    error: function () {
                        btn.prop('disabled', false).html('🛒 Thêm vào giỏ');
                        showNotification('Có lỗi xảy ra, vui lòng thử lại', 'error');
                    }
                });
            });
            
            function showNotification(message, type) {
                var bgColor = type === 'success' ? '#4caf50' : '#f44336';
                var notification = $('<div class="cart-notification">' + message + '</div>');
                notification.css({
                    'position': 'fixed',
                    'top': '20px',
                    'right': '20px',
                    'background': bgColor,
                    'color': 'white',
                    'padding': '15px 25px',
                    'border-radius': '4px',
                    'box-shadow': '0 2px 8px rgba(0,0,0,0.2)',
                    'z-index': '10000',
                    'animation': 'slideIn 0.3s ease-out'
                });
                
                $('body').append(notification);
                
                setTimeout(function () {
                    notification.fadeOut(300, function () {
                        $(this).remove();
                    });
                }, 3000);
            }
        });
    </script>
    
    <style>
        .cart-link {
            position: relative;
        }
        
        .cart-badge {
            position: absolute;
            top: -8px;
            right: -10px;
            background: #ff5c5c;
            color: white;
            border-radius: 50%;
            width: 22px;
            height: 22px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 12px;
            font-weight: bold;
        }
        
        .btn-add-to-cart {
            background: #4caf50;
            color: white;
            border: none;
            padding: 8px 16px;
            border-radius: 4px;
            cursor: pointer;
            font-size: 14px;
            margin-top: 8px;
            width: 100%;
            transition: all 0.3s;
        }
        
        .btn-add-to-cart:hover {
            background: #45a049;
        }
        
        .btn-add-to-cart:disabled {
            background: #ccc;
            cursor: not-allowed;
        }
        
        .card-actions {
            display: flex;
            flex-direction: column;
            gap: 8px;
        }
        
        @@keyframes slideIn {
            from {
                transform: translateX(100%);
                opacity: 0;
            }
            to {
                transform: translateX(0);
                opacity: 1;
            }
        }
    </style>
    
    @RenderSection("Scripts", required: false)
</body>
</html>
