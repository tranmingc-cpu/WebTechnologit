<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>@ViewBag.Title - TECHSTORE</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/site.css?@DateTime.Now.Ticks" rel="stylesheet" />
    <link href="~/Content/css/product/product-index.css?@DateTime.Now.Ticks" rel="stylesheet" />
    <link href="~/Content/css/product/product-detail.css?@DateTime.Now.Ticks" rel="stylesheet" />
    <link href="~/Content/css/account/profile.css?@DateTime.Now.Ticks" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
</head>
<body>

    <header class="header">
        <div class="header-top">
            <div class="header-inner">
                <div class="logo">
                    <a href="@Url.Action("Index", "Home")">
                        <span class="logo-red">TECH</span><span class="logo-white">STORE</span>
                    </a>
                </div>

                <div class="search-box">
                    <input type="text" id="headerSearch" placeholder="Tìm theo tên, hãng, loại..." value="@Request.QueryString["keyword"]" />
                    <button id="btnSearch">
                        <i class="fa fa-search"></i>
                    </button>
                </div>

                <div class="header-actions">
                    <a href="/Cart" class="cart-btn">
                        <i class="fa fa-cart-shopping"></i> <span>Giỏ hàng</span>
                    </a>

                    <div class="account-dropdown">
                        <button class="account-btn">
                            <i class="fa fa-user"></i>
                            @if (Session["UserId"] != null)
                            {
                                <span class="account-name">@Session["UserName"]</span>
                            }
                            else
                            {
                                <span class="account-name">Tài khoản</span>
                            }
                            <i class="fa fa-caret-down"></i>
                        </button>

                        <div class="account-menu">
                            @if (Session["UserId"] == null)
                            {
                                <a href="/Account/Login"><i class="fa fa-right-to-bracket"></i> Đăng nhập</a>
                                <a href="/Account/Register"><i class="fa fa-user-plus"></i> Đăng ký</a>
                            }
                            else
                            {
                                <a href="/Account/Profile"><i class="fa fa-id-card"></i> Thông tin tài khoản</a>
                                <a href="/Account/Orders"><i class="fa fa-box"></i> Đơn hàng của tôi</a>
                                <hr />
                                <a href="/Account/Logout" class="logout"><i class="fa fa-sign-out-alt"></i> Đăng xuất</a>
                            }
                        </div>
                    </div>
                </div>

                <div class="menu-toggle">
                    <i class="fa fa-bars"></i>
                </div>
            </div>
        </div>

        <nav class="menu">
            @foreach (var c in ViewBag.Categories as List<WebApplication10.Models.Categories>)
            {
                <a href="@Url.Action("Index", "Products", new { categoryId = c.CategoryId })" class="@(ViewBag.CurrentCategoryId == c.CategoryId ? "active" : "")">
                    @c.CategoryName
                </a>
            }
        </nav>
    </header>

    <main class="container page-content" style="position: relative;">
        <div id="ajaxLoader" style="display:none; position:absolute; top:50%; left:50%; transform:translate(-50%, -50%); z-index:1000; text-align:center; font-size:2rem; color:#555;">
            <i class="fa fa-spinner fa-spin"></i>
        </div>
        @RenderBody()
    </main>

    <footer class="footer">
        <div class="footer-top">
            <div class="container footer-features">
                <div><i class="fa fa-truck-fast"></i><span>Giao hàng nhanh 2h</span></div>
                <div><i class="fa fa-shield-halved"></i><span>Hàng chính hãng 100%</span></div>
                <div><i class="fa fa-rotate-left"></i><span>Đổi trả trong 7 ngày</span></div>
                <div><i class="fa fa-headset"></i><span>Hỗ trợ 24/7</span></div>
            </div>
        </div>

        <div class="container footer-content">
            <div class="footer-col footer-brand">
                <h3 class="footer-logo">TECH<span>STORE</span></h3>
                <p class="footer-desc">Hệ thống bán lẻ thiết bị công nghệ chính hãng.<br />Laptop • PC • Gaming Gear • Linh kiện</p>
                <div class="footer-contact">
                    <div><i class="fa fa-location-dot"></i> 123 Nguyễn Văn Linh, TP.HCM</div>
                    <div><i class="fa fa-phone"></i> <a href="tel:19005301">1900 5301</a></div>
                    <div><i class="fa fa-envelope"></i> <a href="mailto:support@techstore.com">support@techstore.com</a></div>
                </div>
            </div>

            <div class="footer-col">
                <h4>Về TechStore</h4>
                <ul>
                    <li><a href="#">Giới thiệu</a></li>
                    <li><a href="#">Tin công nghệ</a></li>
                    <li><a href="#">Tuyển dụng</a></li>
                    <li><a href="#">Liên hệ</a></li>
                </ul>
            </div>

            <div class="footer-col">
                <h4>Chính sách</h4>
                <ul>
                    <li><a href="#">Bảo hành</a></li>
                    <li><a href="#">Đổi trả</a></li>
                    <li><a href="#">Vận chuyển</a></li>
                    <li><a href="#">Thanh toán</a></li>
                </ul>
            </div>

            <div class="footer-col footer-newsletter">
                <h4>Nhận ưu đãi</h4>
                <p>Đăng ký để nhận thông tin khuyến mãi mới nhất</p>
                <form class="newsletter-form">
                    <input type="email" placeholder="Email của bạn" required />
                    <button type="submit"><i class="fa fa-paper-plane"></i></button>
                </form>
                <div class="social-icons">
                    <a href="#"><i class="fab fa-facebook-f"></i></a>
                    <a href="#"><i class="fab fa-youtube"></i></a>
                    <a href="#"><i class="fab fa-instagram"></i></a>
                    <a href="#"><i class="fab fa-tiktok"></i></a>
                </div>
            </div>
        </div>

        <div class="footer-bottom">
            <div class="container footer-bottom-inner">
                <span>© 2025 <strong>TechStore</strong>. All rights reserved.</span>
                <div class="footer-payments">
                    <img src="/Content/images/payments/visa.jpg" />
                    <img src="/Content/images/payments/mastercard.png" />
                    <img src="/Content/images/payments/momo.png" />
                    <img src="/Content/images/payments/vnpay.jpg" />
                </div>
            </div>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("Scripts", required: false)
    <script>
        function ajaxSearch(keyword, containerSelector) {
            let $container = $(containerSelector);
            if (!$container.length) return;
            $container.addClass('fade-out');
            $('#ajaxLoader').fadeIn(150);

            $.ajax({
                url: '/Search/QuickSearch',
                data: { keyword: keyword },
                dataType: 'json',
                success: function (res) {
                    $container.html(res.html);
                    $container.removeClass('fade-out').addClass('fade-in');
                    $('#ajaxLoader').fadeOut(200);
                },
                error: function () {
                    $container.html('<p>Lỗi tải sản phẩm.</p>');
                    $('#ajaxLoader').fadeOut(200);
                }
            });
        }

        function performSearch() {
            let keyword = $('#headerSearch').val().trim();
            let container = $('.product-grid').first();

            if (container.length) {
                ajaxSearch(keyword, container);
            } else {
                window.location.href = '/Home/Search?keyword=' + encodeURIComponent(keyword);
            }
        }

        $('#btnSearch').on('click', function (e) {
            e.preventDefault();
            performSearch();
        });

        $('#headerSearch').on('keyup', function (e) {
            if (e.key === 'Enter') {
                performSearch();
            }
        });

        let ticking = false;
        $(window).on('scroll', function () {
            if (!ticking) {
                window.requestAnimationFrame(function () {
                    const $header = $('.header');
                    const scrollTop = $(window).scrollTop();
                    if (scrollTop > 200 && !$header.hasClass('scrolled')) {
                        $header.addClass('scrolled');
                    } else if (scrollTop <= 200 && $header.hasClass('scrolled')) {
                        $header.removeClass('scrolled');
                    }
                    ticking = false;
                });
                ticking = true;
            }
        });


        $('.menu-toggle').on('click', function () {
            $(this).closest('.header').find('.menu').toggleClass('active');
        });

    </script>

</body>
</html>