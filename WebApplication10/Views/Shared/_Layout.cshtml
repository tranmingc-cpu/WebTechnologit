<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>@ViewBag.Title - TECHSTORE</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- BOOTSTRAP -->
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />

    <!-- SITE CSS -->
    <link href="~/Content/css/site.css?@DateTime.Now.Ticks" rel="stylesheet" />

    <!-- FONT AWESOME -->
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
</head>
<body>

    <!-- HEADER -->
    <header class="header">
        <div class="container header-top">
            <div class="logo">
                <a href="@Url.Action("Index", "Home")">
                    <span class="logo-red">TECH</span><span class="logo-white">STORE</span>
                </a>
            </div>

            <div class="search-box">
                @using (Html.BeginForm("Index", "Products", FormMethod.Get))
                {
                    <input type="text"
                           name="keyword"
                           value="@Request.QueryString["keyword"]"
                           placeholder="Tìm theo tên, hãng, loại..." />

                    <button type="submit">
                        <i class="fa fa-search"></i>
                    </button>
                }
            </div>

            <div class="header-actions">
                <a href="#"><i class="fa fa-user"></i> Tài khoản</a>
                <a href="#"><i class="fa fa-cart-shopping"></i> Giỏ hàng</a>
            </div>
        </div>

        <!-- MENU -->
        <nav class="menu">
            @foreach (var c in ViewBag.Categories as List<WebApplication10.Models.Categories>)
            {
                <a href="@Url.Action("Index", "Products", new { categoryId = c.CategoryId })"
                   class="@(ViewBag.CurrentCategoryId == c.CategoryId ? "active" : "")">
                    @c.CategoryName
                </a>
            }
        </nav>
    </header>

    <!-- BODY -->
    <main class="container page-content">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="footer">
        <div class="container footer-content">
            <!-- LEFT -->
            <div class="footer-left">
                <strong>TECH<span style="color:#ff5c5c;">STORE</span></strong><br />
                Hệ thống bán lẻ thiết bị công nghệ<br />
                123 Nguyễn Văn Linh, TP.HCM<br />
                Hotline: <a href="tel:19005301">1900 5301</a><br />
                Email: <a href="mailto:support@techstore.com">support@techstore.com</a>
            </div>

            <!-- CENTER -->
            <div class="footer-center">
                <a href="#">Giới thiệu</a> |
                <a href="#">Liên hệ</a> |
                <a href="#">Bảo hành</a> |
                <a href="#">Đổi trả</a> |
                <a href="#">Hướng dẫn mua</a> |
                <a href="#">Điều khoản</a>
            </div>

            <!-- RIGHT -->
            <div class="footer-right">
                <div>© 2025 TechStore</div>
                <div class="social-icons">
                    <a href="#"><i class="fab fa-facebook-f"></i></a>
                    <a href="#"><i class="fab fa-youtube"></i></a>
                    <a href="#"><i class="fab fa-instagram"></i></a>
                </div>
            </div>
        </div>
    </footer>

    <!-- JQUERY -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    
    @RenderSection("Scripts", required: false)
</body>
</html>
