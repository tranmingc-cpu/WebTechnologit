@model WebApplication10.Models.Orders

<h2>Order #@Model.OrderId</h2>

<p><b>Customer:</b> @Model.Users.FullName</p>
<p><b>Status:</b> @Model.Status</p>
<p><b>Date:</b> @Model.OrderDate</p>

<table class="table">
    <thead>
        <tr>
            <th>Product</th>
            <th>Price</th>
            <th>Qty</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderDetails)
        {
            <tr>
                <td>@item.Products.ProductName</td>
                <td>@item.UnitPrice</td>
                <td>@item.Quantity</td>
                <td>@(item.UnitPrice * item.Quantity)</td>
            </tr>
        }
    </tbody>
</table>

<h4>Total: @Model.TotalAmount</h4>
