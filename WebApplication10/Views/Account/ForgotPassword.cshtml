@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
    ViewBag.Title = "Quên mật khẩu";
}

@* LEFT PANEL *@
@Html.Partial("AuthPartials/_ForgotPasswordPartial")

@* RIGHT PANEL *@
@section RightPanel {
    <h2><span>TECH</span> STORE</h2>
    <p>
        Nhập địa chỉ email của bạn, chúng tôi sẽ gửi hướng dẫn
        để đặt lại mật khẩu một cách an toàn.
    </p>

    <ul class="auth-features">
        <li>Đặt lại mật khẩu an toàn</li>
        <li>Xác minh qua email</li>
        <li>Khôi phục nhanh chóng</li>
    </ul>
}