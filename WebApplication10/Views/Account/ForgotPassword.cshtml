@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
    ViewBag.Title = "Forgot Password";
}

<div class="auth-left">
    <div class="auth-box">
        <div class="auth-header">
            <h2><span>TECH</span> STORE</h2>
            <p>Reset your password</p>
        </div>
        <div class="auth-body">
            <form method="post" autocomplete="off">
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label>Email address</label>
                    <input type="email" name="email" placeholder="you@example.com" required />
                </div>
                <button type="submit" class="btn-auth">Send Reset Link</button>
            </form>

            @if (ViewBag.Message != null)
            {
                <div class="auth-error">@ViewBag.Message</div>
            }

            <div class="auth-links">
                Remembered your password? <a href="@Url.Action("Login","Account")">Back to login</a>
            </div>
        </div>
    </div>
</div>

@section RightPanel {
    <h2><span>TECH</span> STORE</h2>
    <p>Enter your email and we’ll send you instructions to reset your password securely.</p>
    <ul class="auth-features">
        <li>Secure password reset</li>
        <li>Email verification</li>
        <li>Fast recovery</li>
    </ul>
}
