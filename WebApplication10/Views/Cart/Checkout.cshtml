@model List<WebApplication10.Models.CartItem>

@{
    ViewBag.Title = "Thanh toán";
}

@section styles {
    <link href="~/Content/css/checkout.css" rel="stylesheet" />
}

<div class="checkout-container">
    <h1>Thanh toán đơn hàng</h1>

    @if (Model == null || !Model.Any())
    {
        <div class="empty-cart">
            <p>Giỏ hàng của bạn đang trống</p>
            <a href="@Url.Action("Index", "Products")" class="btn btn-primary">
                Tiếp tục mua sắm
            </a>
        </div>
    }
    else
    {
        <div class="checkout-content">
            <div class="checkout-form">
                <h2>Thông tin giao hàng</h2>
                
                <form id="checkoutForm">
                    <div class="form-group">
                        <label>Họ và tên *</label>
                        <input type="text" name="fullName" class="form-control" required placeholder="Nhập họ và tên" />
                    </div>

                    <div class="form-group">
                        <label>Số điện thoại *</label>
                        <input type="tel" name="phone" class="form-control" required placeholder="Nhập số điện thoại" />
                    </div>

                    <div class="form-group">
                        <label>Email *</label>
                        <input type="email" name="email" class="form-control" required placeholder="Nhập email" />
                    </div>

                    <div class="form-group">
                        <label>Địa chỉ giao hàng *</label>
                        <textarea name="address" class="form-control" rows="3" required placeholder="Nhập địa chỉ đầy đủ"></textarea>
                    </div>

                    <div class="form-group">
                        <label>Ghi chú</label>
                        <textarea name="notes" class="form-control" rows="2" placeholder="Ghi chú thêm (không bắt buộc)"></textarea>
                    </div>

                    <div class="form-group">
                        <label>Phương thức thanh toán</label>
                        <select name="paymentMethod" class="form-control">
                            <option value="COD">Thanh toán khi nhận hàng (COD)</option>
                            <option value="Bank">Chuyển khoản ngân hàng</option>
                        </select>
                    </div>

                    <button type="submit" class="btn btn-checkout" id="btnCheckout">
                        Đặt hàng
                    </button>
                </form>
            </div>

            <div class="order-summary">
                <h2>Đơn hàng của bạn</h2>
                
                <div class="summary-items">
                    @foreach (var item in Model)
                    {
                        <div class="summary-item">
                            <div class="item-info">
                                <img src="@(string.IsNullOrEmpty(item.ImageUrl)
                                    ? "/Content/images/no-image.png"
                                    : "/Content/images/" + item.ImageUrl)" alt="@item.ProductName" />
                                <div>
                                    <h4>@item.ProductName</h4>
                                    <p>Số lượng: @item.Quantity</p>
                                </div>
                            </div>
                            <div class="item-price">
                                @String.Format("{0:N0}đ", item.TotalPrice)
                            </div>
                        </div>
                    }
                </div>

                <div class="summary-totals">
                    <div class="summary-row">
                        <span>Tạm tính:</span>
                        <span>@String.Format("{0:N0}đ", Model.Sum(c => c.TotalPrice))</span>
                    </div>
                    <div class="summary-row">
                        <span>Phí vận chuyển:</span>
                        <span>Miễn phí</span>
                    </div>
                    <div class="summary-row total">
                        <span>Tổng cộng:</span>
                        <span>@String.Format("{0:N0}đ", Model.Sum(c => c.TotalPrice))</span>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<!-- Success Modal -->
<div id="successModal" class="success-modal" style="display:none;">
    <div class="success-modal-content">
        <div class="success-icon">
            <i class="fa fa-check-circle"></i>
        </div>
        <h2>Đặt hàng thành công!</h2>
        <p id="successMessage"></p>
        <p class="order-id">Mã đơn hàng: <strong id="orderIdDisplay"></strong></p>
        <div class="success-actions">
            <button class="btn btn-primary" id="btnViewOrder">
                <i class="fa fa-list"></i> Xem đơn hàng
            </button>
            <button class="btn btn-secondary" id="btnContinueShopping">
                <i class="fa fa-shopping-bag"></i> Tiếp tục mua sắm
            </button>
        </div>
    </div>
</div>

<!-- Order Details Modal -->
<div id="orderDetailModal" class="order-modal" style="display:none;">
    <div class="order-modal-content">
        <span class="order-close">&times;</span>
        <div id="orderDetailContent">
            <!-- AJAX content here -->
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var currentOrderId = null;

            $('#checkoutForm').on('submit', function (e) {
                e.preventDefault();
                
                var btn = $('#btnCheckout');
                var originalHtml = btn.html();
                btn.prop('disabled', true).html('<i class="fa fa-spinner fa-spin"></i> Đang xử lý...');
                
                $.ajax({
                    url: '@Url.Action("ProcessCheckout", "Cart")',
                    type: 'POST',
                    data: $(this).serialize(),
                    success: function (response) {
                        console.log('Checkout response:', response);
                        
                        if (response.success) {
                            currentOrderId = response.orderId;
                            $('#successMessage').text(response.message);
                            $('#orderIdDisplay').text('#' + response.orderId);
                            
                            // Hiển thị success modal
                            $('#successModal').fadeIn(300);
                            
                            // Update cart badge
                            $('.cart-badge').text('0').hide();
                        } else {
                            alert(response.message || 'Có lỗi xảy ra, vui lòng thử lại');
                            btn.prop('disabled', false).html(originalHtml);
                        }
                    },
                    error: function (xhr, status, error) {
                        console.error('Error:', error);
                        console.error('Response:', xhr.responseText);
                        alert('Có lỗi xảy ra, vui lòng thử lại');
                        btn.prop('disabled', false).html(originalHtml);
                    }
                });
            });

            // View Order Details
            $('#btnViewOrder').on('click', function() {
                if (!currentOrderId) {
                    window.location.href = '@Url.Action("Orders", "Account")';
                    return;
                }
                
                // Chuyển đến trang orders
                window.location.href = '@Url.Action("Orders", "Account")';
            });

            // Continue Shopping
            $('#btnContinueShopping').on('click', function() {
                window.location.href = '@Url.Action("Index", "Products")';
            });

            // Close success modal on outside click
            $('#successModal').on('click', function(e) {
                if ($(e.target).is('#successModal')) {
                    // Không đóng modal khi click ngoài - buộc user chọn action
                }
            });
        });
    </script>
    
    <style>
        .success-modal {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.9);
            z-index: 10001;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .success-modal-content {
            background: linear-gradient(135deg, #3b3d54, #32344a);
            padding: 50px 40px;
            border-radius: 14px;
            max-width: 500px;
            width: 90%;
            text-align: center;
            box-shadow: 0 10px 40px rgba(0,0,0,0.8);
        }

        .success-icon {
            font-size: 80px;
            color: #4caf50;
            margin-bottom: 20px;
        }

        .success-modal-content h2 {
            color: #fff;
            font-size: 28px;
            font-weight: 700;
            margin: 0 0 15px 0;
        }

        .success-modal-content p {
            color: #ddd;
            font-size: 16px;
            line-height: 1.6;
            margin: 10px 0;
        }

        .order-id {
            color: #4caf50;
            font-size: 18px;
            font-weight: 600;
            margin: 20px 0;
        }

        .success-actions {
            display: flex;
            gap: 15px;
            margin-top: 30px;
        }

        .success-actions .btn {
            flex: 1;
            padding: 14px;
            border-radius: 10px;
            font-size: 15px;
            font-weight: 700;
            text-decoration: none;
            transition: .3s;
            cursor: pointer;
            border: none;
        }

        .success-actions .btn-primary {
            background: linear-gradient(135deg, #ff6b6b, #e34b4b);
            color: #fff;
        }

        .success-actions .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(227,75,75,.5);
        }

        .success-actions .btn-secondary {
            background: #2e3040;
            color: #fff;
            border: 1px solid rgba(255,255,255,.1);
        }

        .success-actions .btn-secondary:hover {
            background: #3b3d54;
            transform: translateY(-2px);
        }

        .success-actions button i {
            margin-right: 8px;
        }
    </style>
}
