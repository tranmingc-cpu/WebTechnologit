@model WebApplication10.Models.Users

<div class="edit-user-container">
    <h3 class="form-title">Create User</h3>

    @using (Html.BeginForm("Create", "Users", FormMethod.Post, new { id = "createUserForm", @class = "ajax-form" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-group mb-3">
            @Html.LabelFor(m => m.Username, htmlAttributes: new { @class = "form-label required" })
            @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Enter username" })
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(m => m.Password, htmlAttributes: new { @class = "form-label required" })
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Enter password" })
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(m => m.FullName, htmlAttributes: new { @class = "form-label required" })
            @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", placeholder = "Enter full name" })
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(m => m.Email, htmlAttributes: new { @class = "form-label required" })
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Enter email" })
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(m => m.Phone, htmlAttributes: new { @class = "form-label text-light" })
            @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", placeholder = "Enter phone (optional)" })
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(m => m.Role, htmlAttributes: new { @class = "form-label required" })
            @Html.DropDownListFor(m => m.Role, new SelectList(new[] { "Customer", "Admin" }), "Select role", new { @class = "form-control" })
        </div>

        <div class="d-flex justify-content-between mt-3">
            <button type="button" class="btn btn-secondary" id="btnBackToList">
                <i class="bi bi-arrow-left"></i> Back to List
            </button>

            <button type="submit" class="btn btn-primary">
                <i class="bi bi-check-lg"></i> Save
            </button>
        </div>
    }
</div>
<style>
    .form-label.required::after {
        content: " *";
        color: #ff5c5c;
        font-weight: bold;
    }
</style>
