@model WebApplication10.ViewModels.AdminCreateUserVM

<div class="edit-user-container">
    <h3 class="form-title">Tạo người dùng</h3>

    @using (Html.BeginForm("Create", "Users", FormMethod.Post, new { id = "createUserForm", @class = "ajax-form" }))
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

        <div class="form-group mb-3">
            @Html.LabelFor(m => m.Username, new { @class = "form-label required" })
            @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Nhập tên đăng nhập" })
            @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger small" })
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(m => m.Password, new { @class = "form-label required" })
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Nhập mật khẩu" })
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger small" })
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(m => m.FullName, new { @class = "form-label required" })
            @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", placeholder = "Nhập họ và tên" })
            @Html.ValidationMessageFor(m => m.FullName, "", new { @class = "text-danger small" })
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(m => m.Email, new { @class = "form-label required" })
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Nhập email" })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger small" })
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(m => m.Phone, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", placeholder = "Nhập số điện thoại (không bắt buộc)" })
            @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger small" })
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(m => m.Role, new { @class = "form-label required" })
            @Html.DropDownListFor(
                m => m.Role,
                new SelectList(new[] { "Customer", "Admin" }),
                "-- Chọn vai trò --",
                new { @class = "form-control" }
            )
            @Html.ValidationMessageFor(m => m.Role, "", new { @class = "text-danger small" })
        </div>

        <div class="d-flex justify-content-between mt-3">
            <button type="button" class="btn btn-secondary" id="btnBackToList">
                <i class="bi bi-arrow-left"></i> Quay lại
            </button>

            <button type="submit" class="btn btn-primary">
                <i class="bi bi-check-lg"></i> Lưu
            </button>
        </div>
    }
</div>

<style>
    .form-label.required::after {
        content: " *";
        color: #ff5c5c;
        font-weight: bold;
    }
</style>