@model IEnumerable<WebApplication10.Models.Users>

<div id="users-partial">
    <div class="table-responsive">
        <table class="table table-striped table-dark table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Tên tài khoản</th>
                    <th scope="col">Họ tên</th>
                    <th scope="col">Email</th>
                    <th scope="col">Điện thoại</th>
                    <th scope="col">Vai</th>
                    <th scope="col" class="text-center">Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Username</td>
                        <td>@user.FullName</td>
                        <td>@user.Email</td>
                        <td>@user.Phone</td>
                        <td>@user.Role</td>
                        <td class="text-center">
                            <div class="user-table-actions">
                                <button class="btn btn-sm btn-info btn-edit" data-id="@user.UserId">
                                    <i class="bi bi-pencil-fill"></i> Edit
                                </button>
                                <button class="btn btn-sm btn-danger btn-delete" data-id="@user.UserId">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>